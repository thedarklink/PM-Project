          <%= link_to i.name, burndown_index_path(:project => @project.id, :sprint => i.id) %>
        </h1>
      <%= @tageImSprint %>
      <%= @scrumPoints %>
      <%= @averagePoints %>
      <%= @aufwand %>
      <%
    end
  %>

