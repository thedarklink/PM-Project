<hr>
<div class="container">

  <% if @sprint != nil%>
      <div class="col-xs-12">
        <%= line_chart [{'data': @serieAverage, 'name': 'Ideal'},
                        {'data': @serieReal, 'name': 'Remain'}],
                       {library: {hAxis: {title: "Tage"}, vAxis: {title: "Story Points"}}} %>
      </div>
  <% else %>
