<!DOCTYPE html>
<html>
<head>
  <title>ChartKickExample</title>

  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= javascript_include_tag "http://www.google.com/jsapi", "chartkick" %>
  <%= stylesheet_link_tag 'http://yandex.st/bootstrap/3.1.1/css/bootstrap.min.css' %>
  <%= javascript_include_tag 'http://yandex.st/bootstrap/3.1.1/js/bootstrap.min.js' %>

  <%= csrf_meta_tags %>
</head>


<h3>
  <small>
    <%= @project.name %>
    <%= @tageImSprint.to_i%>
  </small>
  <br/> Backlog
</h3>
<hr/>

<%= link_to '+ Neues Item', new_backlogitem_path(:project => @project.id ) %>
<hr/>
<table class="table">
  <thead>
    <tr>
      <th><%= sort_link "title" %></th>
      <th>Creationdate</th>
      <th>Assignedto</th>
      <th>State</th>
      <th>Priorty</th>
      <th>Effort</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @backlogitems.each do |backlogitem| %>
      <tr>
        <td><%= backlogitem.title %></td>
        <td><%= backlogitem.creationdate %></td>
        <td><%= backlogitem.assignedto %></td>
        <td><%= backlogitem.state %></td>
        <td><%= backlogitem.priorty %></td>
        <td><%= backlogitem.effort %></td>
        <td><%= link_to 'Anzeigen', backlogitem %></td>
        <td><%= link_to 'Bearbeiten', edit_backlogitem_path(backlogitem) %></td>
        <td><%= link_to 'LÃ¶schen', backlogitem, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>



<div class="row">

  <!-- Line Chart - Single Series -->
  <div class="col-xs-6">
    <h3>Visits By Day</h3>


    <% series_b = {"1 Tag" => 30, "2 Tag" => 29,"3 Tag" => 26} %>

    <h1><%= @tageImSprint%></h1>
    <h1><%= @back%></h1>
    <h1><%= @perDay%></h1>

    <%= line_chart [{'data': @noises, 'name': 'Estimate'},
                    {'data': @noises, 'name': 'Afford'}] %>


  </div>
  </div>