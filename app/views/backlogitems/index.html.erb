  </thead>

  <tbody>
    <% @backlogitems.each do |backlogitem| %>
      <tr>
        <td><%= backlogitem.title %></td>
        <td><%= backlogitem.creationdate %></td>
        <td><%= backlogitem.assignedto %></td>
        <td><%= backlogitem.state %></td>
        <td><%= backlogitem.priorty %></td>
        <td><%= backlogitem.effort %></td>
        <td><%= link_to 'Anzeigen', backlogitem %></td>
        <td><%= link_to 'Bearbeiten', edit_backlogitem_path(backlogitem) %></td>
